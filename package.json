    "react-dom": "^16.2.0",
    "redux": "^4.0.0",
    "standard-version": "^4.3.0",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.9.2"
  },
  "dependencies": {},
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
